<!DOCTYPE html>
<html>
<head>
  <title>Blocipedia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-3">
				<ul class="nav nav-tabs">
					<li><%= link_to "Blocipedia", root_path %></li>
					<li><%= link_to "Wikis", wikis_path %></li>
				</ul>
			</div>
			<div class="col-md-9 pull-right">
				<% if user_signed_in? %>
					<div class="pull-right">Signed in as: <strong><%= current_user.email %></strong> |
	   			<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
	   			</div>
				<% else %>
		   		<%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
		   		<%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
	 			<% end %>
			</div>
		</div>
		<div class="row">
			<% if flash[:notice] %>
			 	<div class="alert alert-success">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<%= flash[:notice] %>
			 	</div>
			<% elsif flash[:alert] %>
				<div class="alert alert-warning">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<%= flash[:alert] %>
				</div>
			<% end %>
		</div>

		<div class="row">
			<div class="col-md-9 col-md-offset-1">
		 		<%= yield %>
			</div>
		</div>

	</div>

</body>
</html>
