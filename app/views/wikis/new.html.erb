<div class="container">
	<h2>New Wiki</h2>
	<div class="col-md-9 no-padding-left">
		<%= form_for @wiki do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
			</div>
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, rows: 20, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-succses' %>
			</div>
		<% end %>
	</div>
</div>